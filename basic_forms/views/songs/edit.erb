<div class='container' style="padding-top: 20px;">
  <div class='row'>
    <div class='span8'>
      <div class="page-header">
        <h1>
          <%= @song.title || 'Untitled' %>
        </h1>
      </div>
      <div>
        <form action="/songs/<%= @song.id %>" method="post">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<%= @song.title %>">
          <label for="artist">Artist</label>
          <input type="text" id="artist" name="artist" value="<%= @song.artist %>">
          <label for="album">Album</label>
          <input type="text" id="album" name="album" value="<%= @song.album %>">
          <label for="genre">Genre</label>
          <input type="text" id="genre" name="genre" value="<%= @song.genre %>">
          <label for="length">Length</label>
          <input type="text" id="length" name="length" value="<%= @song.length %>">

          <div>
            <input type="submit">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
